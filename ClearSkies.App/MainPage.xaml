<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClearSkies.App.MainPage"
    Title="ClearSkies VFR">
    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="16">
            <Entry x:Name="IcaoEntry"
                   Placeholder="ICAO (e.g., KSFO)"
                   Text="KSFO" />
            <Entry x:Name="RunwayEntry"
                   Placeholder="Runway (e.g., 28L)"
                   Text="28L" />
            <Button Text="Fetch Conditions" Clicked="OnFetchClicked" />
            <Label x:Name="StaleBadge"
                   Text=""
                   TextColor="White"
                   BackgroundColor="Gray"
                   Padding="6,2"
                   IsVisible="False" />
            <Label x:Name="ResultLabel"
                   Text="Result will appear here."
                   LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
