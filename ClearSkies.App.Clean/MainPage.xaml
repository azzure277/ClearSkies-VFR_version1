<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClearSkies.App.Clean.MainPage"
    Title="ClearSkies VFR">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Entry x:Name="IcaoEntry"
                   Placeholder="Enter ICAO (e.g., KSFO)" />
            <Entry x:Name="RunwayEntry"
                   Placeholder="Runway (optional)" />
            <Button Text="Get Conditions" Clicked="OnGetConditionsClicked" />
            <Label x:Name="ResultLabel"
                   Text="Waiting..."
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
